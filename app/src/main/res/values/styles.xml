<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextAppearance.CollapsingToolbar.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="TextAppearance.CollapsingToolbar.Collapsed" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">26sp</item>
    </style>
</resources>